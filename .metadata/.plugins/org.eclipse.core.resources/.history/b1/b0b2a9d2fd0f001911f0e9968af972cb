package com.jp.lms.source.services;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Qualifier;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RestController;

import com.jp.lms.source.entities.Prospect;
import com.jp.lms.source.exceptions.LmsException;

@RestController
public class ServiceProspectImpl1 implements ServiceProspect {
	
	@Autowired
	@Qualifier("service")
	private ServiceProspect prospectService;
	
	@Override
	@CrossOrigin(origins= "http://localhost:4200")
	@RequestMapping(value = "/prospectList",method = RequestMethod.GET,produces="application/json")
	public List<Prospect> getProspectList() throws LmsException {
		List<Prospect> prospectList = null;
		try {
			prospectList = prospectService.getProspectList();
			
		} catch (LmsException e) {
			e.printStackTrace();
		}
		return prospectList;
	}

	@Override
	@CrossOrigin(origins= "http://localhost:4200")
	@RequestMapping(value="/prospectDetails",method = RequestMethod.GET,produces="application/json")
	public Prospect getProspectDetails(String prospectId) throws LmsException {
		Prospect prospect = null;
		try {
			prospect = prospectService.getProspectDetails(prospectId);
		} catch (LmsException e) {
			e.printStackTrace();
		}
		return prospect;
	}

	@Override
	@CrossOrigin(origins= "http://localhost:4200")
	@RequestMapping(value="/register",method = RequestMethod.POST,consumes="application/json")
	public String registerProspect(Prospect prospect) throws LmsException {
		return prospectService.registerProspect(prospect);
	}

	@Override
	public String updateProspect(Prospect prospect) throws LmsException {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	@RequestMapping(value="/updateprospectDetails",method = RequestMethod.GET,headers="Accept=application/json")
	public String removeProspect(String prospectId) throws LmsException {
		return prospectService.removeProspect(prospectId);
	}

}
