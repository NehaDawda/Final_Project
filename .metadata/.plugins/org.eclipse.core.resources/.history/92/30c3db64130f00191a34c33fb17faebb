package com.jp.lms.source.services;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Qualifier;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Propagation;
import org.springframework.transaction.annotation.Transactional;

import com.jp.hr.daos.DaoEmployee;
import com.jp.hr.entities.Employee;
import com.jp.hr.exceptions.HrException;

@Service("service")
public class ServiceProspectImpl implements ServiceProspect {
	private DaoEmployee daoEmp;
	
	// Resolving Dependency.
	public ServiceProspectImpl() throws HrException{
		//daoEmp = new DaoEmployeeImpl();
	}
	
	@Autowired //By Name
	public ServiceProspectImpl(@Qualifier("daoDS") DaoEmployee daoEmp) throws HrException{
		this.daoEmp = daoEmp;
	}
	
	
	@Override
	public List<Employee> getEmpList() throws HrException {
		return daoEmp.getEmpList();
	}

	@Override
	public Employee getEmpDetails(int empId) throws HrException {
		return daoEmp.getEmpDetails(empId);
	}

	@Override
	@Transactional(propagation=Propagation.REQUIRES_NEW, rollbackFor=HrException.class)
	public boolean joinNewEmployee(Employee emp) throws HrException {
		return daoEmp.insertNewRecord(emp);
	}
}
